@page
@model PowerSentinel.Pages.Admin.Events.IndexModel

<h2>Events</h2>
<p><a asp-page="Create" class="inline-block bg-indigo-600 text-white rounded px-3 py-1 text-sm hover:bg-indigo-700">Create new event</a></p>

<div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 dark:bg-gray-800">
            <tr>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Id</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">DeviceId</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">IsPowerOn</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">StartAt</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">EndAt</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200">
        @foreach (var e in Model.Events)
        {
            <tr class="odd:bg-white even:bg-gray-50 dark:odd:bg-transparent dark:even:bg-transparent hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-900 dark:text-gray-100">@e.Id</td>
                <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-900 dark:text-gray-100">@e.DeviceId</td>
                <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-900 dark:text-gray-100">@e.IsPowerOn</td>
                <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-500 dark:text-gray-300">@e.StartAt</td>
                <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-500 dark:text-gray-300">@(e.EndAt?.ToString() ?? "")</td>
                <td class="px-3 py-2 whitespace-nowrap text-xs">
                    <a asp-page="Edit" asp-route-id="@e.Id" class="text-indigo-600 dark:text-indigo-300 hover:text-indigo-900 dark:hover:text-indigo-100 text-xs">Edit</a>
                    <span class="px-1 text-gray-300 dark:text-gray-600">|</span>
                    <a asp-page="Delete" asp-route-id="@e.Id" class="text-red-600 dark:text-red-400 hover:text-red-800 text-xs">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
