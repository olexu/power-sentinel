@page
@model PowerSentinel.Pages.Admin.Events.EditModel

<h2>Edit Event</h2>
<form method="post" class="max-w-md space-y-4">
    <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

    <div>
        <label asp-for="Event.Id" class="block mb-1">Id</label>
        <input asp-for="Event.Id" readonly class="border rounded p-2 w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-100" />
    </div>

    <div>
        <label asp-for="Event.DeviceId" class="block mb-1">DeviceId</label>
        <input asp-for="Event.DeviceId" class="border rounded p-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100" />
        <span asp-validation-for="Event.DeviceId" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex items-center gap-2">
        <input asp-for="Event.IsPowerOn" type="checkbox" class="h-4 w-4" />
        <label asp-for="Event.IsPowerOn" class="text-sm">IsPowerOn</label>
    </div>

    <div>
        <label asp-for="Event.StartAt" class="block mb-1">StartAt</label>
        <input asp-for="Event.StartAt" type="datetime-local" class="border rounded p-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100" />
        <span asp-validation-for="Event.StartAt" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Event.EndAt" class="block mb-1">EndAt</label>
        <input asp-for="Event.EndAt" type="datetime-local" class="border rounded p-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100" />
        <span asp-validation-for="Event.EndAt" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex items-center gap-3">
        <button type="submit" class="bg-indigo-600 dark:bg-indigo-500 text-white rounded px-4 py-2">Save</button>
        <a asp-page="Index" class="text-gray-600 dark:text-gray-300">Cancel</a>
    </div>
</form>
